#!/bin/bash
#MISE description="Create a public GitHub repo and push main"

set -euo pipefail
export GIT_DIR=.bare

REPO="${1:?Usage: mise run repo-public <owner/repo>}"

gh repo create "$REPO" --public --source=. --push
echo ""
echo "Public repo created and main branch pushed."
echo "  https://github.com/$REPO"
